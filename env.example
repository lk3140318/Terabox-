# Telegram Core API Credentials (Obtain from https://my.telegram.org/apps)
TELEGRAM_API="YOUR_TELEGRAM_API_ID"
TELEGRAM_HASH="YOUR_TELEGRAM_API_HASH"

# Telegram Bot Token (Obtain from @BotFather)
BOT_TOKEN="YOUR_BOT_TOKEN"

# Channel/User ID where logs and downloaded files are forwarded
# For channels/groups, use the negative ID (e.g., -1001234567890)
# For users, use their positive ID
DUMP_CHAT_ID="-100xxxxxxxxxx"

# Channel ID for Forced Subscription (Must be public or bot must be admin)
# Use the negative ID (e.g., -1001234567890)
FSUB_ID="-100xxxxxxxxxx"

# Enable/Disable Broadcast Feature (True/False)
BROADCAST="True"

# Telegram User ID(s) of Bot Admins (comma-separated if multiple)
ADMIN_ID="YOUR_USER_ID,ANOTHER_ADMIN_ID"

# Terabox Session Cookie (Crucial for downloading)
# Find this in your browser's developer tools (Network tab -> Headers -> Cookie) after logging into Terabox
TERABOX_COOKIE="panlogin=xxxxx; browserid=xxxxx; ndus=xxxxx; csrfToken=xxxxx; lang=en; TSID=xxxxx; __bid_n=xxxxx;"

# --- Optional ---
# Database file name
DATABASE_FILE="bot_database.json"
# Download directory (temporary storage)
DOWNLOAD_DIR="downloads/"
# Adult keywords list (comma-separated, case-insensitive)
ADULT_KEYWORDS="porn,xxx,sex,hentai,nudity,adult"
# Anti-spam delay in seconds
SPAM_DELAY_SECONDS="60"
# Token validity duration in hours
TOKEN_EXPIRY_HOURS="24"
